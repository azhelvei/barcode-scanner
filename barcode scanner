<body>
    <div class="container">
        <h1>Fresh Finds Grocery</h1>
        <p>Eat Fresh, Live Well: Your One-Stop Shop for Quality Groceries.</p>
        <h2>Scan, Track, & Never Waste</h2>
        <p>Our built-in expiration tracker automatically monitors your items.</p>
        <div class="input-container">
            <input type="text" id="barcode" placeholder="Enter Barcode">
            <button onclick="handleScan()">Start Scanning</button>
        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Barcode</th>
                    <th>Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="scanned-items">
                <tr><td colspan="4">No items scanned yet.</td></tr>
            </tbody>
        </table>
    </div>
    <script>
        let scannedItems = [];
        function handleScan() {
            let barcodeInput = document.getElementById("barcode");
            let barcode = barcodeInput.value.trim();
            if (barcode) {
                let newItem = { id: scannedItems.length + 1, barcode, name: `Item ${barcode}`, status: "Fresh" };
                scannedItems.push(newItem);
                updateTable();
                barcodeInput.value = "";
            }
        }
        function updateTable() {
            let tableBody = document.getElementById("scanned-items");
            tableBody.innerHTML = "";
            scannedItems.forEach(item => {
                let row = `<tr>
                    <td>${item.id}</td>
                    <td>${item.barcode}</td>
                    <td>${item.name}</td>
                    <td style='color: green; font-weight: bold;'>${item.status}</td>
                </tr>`;
                tableBody.innerHTML += row;
            });
        }
    </script>
</body>
